        </div>

        <div class="w3-third">
            <h3>LATEST BLOG POSTS</h3>
            <ul class="w3-ul w3-hoverable">
                {% for post in posts %}
                    {% if post.slug is not empty %}
                <li class="w3-padding-16" data="{{ path(post.page,{'post':post.slug}) }}">
                    {% else %}
                <li class="w3-padding-16" data="{{ path(post.page,{'post':post.id}) }}">
                    {% endif %}
                    {#<img src="/w3images/workshop.jpg" class="w3-left w3-margin-right" style="width:50px">#}
                    <span class="w3-large">{{ post.postDate|date("m/d/Y")}}</span><br>
                    <span>{{ post.log | raw }}</span>
                </li>
                {% endfor %}
                {#<li class="w3-padding-16">#}
                    {#<img src="/w3images/gondol.jpg" class="w3-left w3-margin-right" style="width:50px">#}
                    {#<span class="w3-large">Ipsum</span><br>#}
                    {#<span>Praes tinci sed</span>#}
                {#</li>#}
