{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path("homepage") }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path("brewing") }}">Homebrewing</a></li>
            <li class="breadcrumb-item"><a href="{{ path("brewing/post") }}">Posts</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ log.title }}</li>
        </ol>
    </nav>
    {#<div class="w3-container">#}
        {#{% include 'header.html.twig' %}#}
        {#<div class="w3-container" style="margin-top: -25px;">#}
