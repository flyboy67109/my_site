                    {#All Homebrewing Posts#}
                {#</button>#}
            {#</a>#}
        {#</div>#}
    {#</div>#}

    <div class="w3-container w3-padding-large" style="margin-bottom:32px" id="post">
        {% include 'post.html.twig' %}
        {% if log.postDate is empty %}
            <h4><b>No Log Found</b></h4>
        {% else %}
            <h1 data="{{ log.id }}">{{ log.title }}</h1>
        <h4><b>{{ log.postDate |date("m/d/Y") }}</b></h4>
        {% endif %}
        {#<h5><u>{{ log.section }}</u></h5>#}
        <p>
            {{ log.log | raw }}
        <div class="fb-like" data-href="http://www.lylecrane.com{{ app.request.requestUri }}" data-layout="standard" data-action="like" data-size="small" data-show-faces="true" data-share="true"></div>
        </p>
    </div>
{% endblock %}
